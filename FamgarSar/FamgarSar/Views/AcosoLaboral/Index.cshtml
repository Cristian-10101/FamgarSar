@model IEnumerable<FamgarSar.Models.AcosoLaboral>

@{
    ViewData["Title"] = "Acoso Laboral";
}
<h2> Acoso Laboral</h2>
<div class="row">
    <div class="col-sm-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-sm-auto">
        <a class="btn btn-success" onclick="acosolaborals_search()" id="search-link"><i class="fas fa-search"></i></a>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-square"></i>Nuevo</a>
    </div>

</div>
<hr />
<br />
<div>
    <table class="table table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Document)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaDiligencionamiento)
                </th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Document)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaDiligencionamiento)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.AcosoLaboralId"><i class="fas fa-info-circle"></i>Detalle</a>


                    </td>
                </tr>

            }

        </tbody>

    </table>
</div>

<script src="~/js/AcosoLaboral.js" asp-append-version="true"></script>
